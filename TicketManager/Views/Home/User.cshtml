@model TicketManager.Models.ViewModels.UserTicketViewModel
@{
    ViewData["Title"] = "Utilisateur";
}

<div class="text-center">
    <h1 class="display-4">Utilisateur</h1>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Administrateur</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._users)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.IsAdmin</td>
                    <td><a asp-controller="Home" asp-action="CreateEditUser" asp-route-id="@item.IdUser">Modifier</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="CreateEditUser" asp-route-id="null" class="btn btn-primary">Nouveau</a>
</div>
